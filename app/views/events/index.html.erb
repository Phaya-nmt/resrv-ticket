<p id="notice"><%= notice %></p>

<h1>イベント一覧表</h1>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>詳細情報</th>
      <th>日程</th>
      <th>上限枚数</th>
      <th>金額</th>
      <th>予約枚数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.stock_count %></td>
        <td><%= number_to_currency(event.price, :unit => "円", :precision => 0) %></td>
        <td><%= event.sell_count %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

